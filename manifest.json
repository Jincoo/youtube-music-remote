{
  "manifest_version": 3,
  "name": "YouTube Music Auto Remote",
  "version": "2.0",
  "description": "서버 없는 자동 네트워크 검색으로 YouTube Music 원격 제어",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://*.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://music.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Music Auto Remote - 서버 없는 자동 연결"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://music.youtube.com/*"]
    }
  ],
  
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "32": "data:image/svg+xml;base64,"
  }
}